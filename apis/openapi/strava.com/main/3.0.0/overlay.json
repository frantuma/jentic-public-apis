{
  "overlay": "1.0.0",
  "info": {
    "title": "Overlay for the Strava API",
    "version": "1.0.0"
  },
  "actions": [
    {
      "description": "Remove the weight parameter from the PUT /athlete endpoint.",
      "target": "$.paths['/athlete'].put.parameters",
      "remove": true
    },
    {
      "description": "Add a request body to the PUT /athlete endpoint.",
      "target": "$.paths['/athlete'].put",
      "update": {
        "requestBody": {
          "description": "The updated athlete data.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "weight": {
                    "type": "number",
                    "format": "float",
                    "description": "The weight of the athlete in kilograms."
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "description": "Remove $ref sibling (in) from Reference Object referencing the per_page Parameter Object.",
      "target": "$.paths['/segment_efforts'].get.parameters[3].in",
      "remove": true
    },
    {
      "description": "Remove $ref sibling (schema) from Reference Object referencing the per_page Parameter Object.",
      "target": "$.paths['/segment_efforts'].get.parameters[3].schema",
      "remove": true
    },
    {
      "description": "Add a parameter to the GET /athletes/{id}/routes endpoint.",
      "target": "$.paths['/athletes/{id}/routes'].get",
      "update": {
        "parameters": [
          {
            "description": "The identifier of the athlete. Must match the authenticated athlete.",
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "format": "int64",
              "type": "integer"
            }
          }
        ]
      }
    }
  ]
}